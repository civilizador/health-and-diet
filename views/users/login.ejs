<% include ../partials/header_login     %>

  <div class="marginCenter mr-auto">
      <img width='70px' src='/images/logo.png' class='float-left'> 
      <h3 class='float-left blueHeading'>ACADEMY OF <br> NUTRITION AND DIET  </h3>  
  </div>

<div class='login_page_wrapper '>
    
  <div class="container" >
      <div id='login_container'  class='row col-lg-12 col-md-12 col-sm-12'>
          
          <div class='col-lg-6'>
              <img width='100%'src='/images/login_left_text.jpg'>
          </div>
          
          <div class='col-lg-6'>
              
              <form action="/login" method="POST" style="width: 80 %;" >
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="text" class="form-control" id="exampleInputEmail1"  name="username" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name='password' placeholder="Password">
                </div>
                <button class='submitButton' type="submit" class="btn btn-success">Submit</button>
                <p>У Вас нет учетной записи? <b><a href='/register'>Зарегистрироваться</a></b></p> <a class='pull-right'>Забыли пароль?</a>
              </form>
             
          </div>
          
      </div>
  </div>
  
  

</div>

