<center><h1> Добавить Часть в Урок</h1>
</center>
<div class='container'>
  
    <form action="/create_lesson" method="POST">
  
        <div class="form-group">
            <label>Добавлен</label>
                <input   class='form-control' required type=date name="lesson[created]" >
        </div>
        
        <div  class="form-group">
            <label>Добавить урок в следующий курс</label>
                <select id='course_selector_part_add' class='form-control' name="part[related_to_course]">
                     <% courses_list.forEach(function(course){ %>
                     <option><%=course.title%><span><%=' _ID:' + course.id%></span></option>
                     <% }) %>
                </select>
        </div>
         <div  class="form-group">
            <label>Добавить часть в следующий урок</label>
                <select id='lesson_selector_part_add' class='form-control' name="part[related_to_lesson]">
                     <% lesson_list.forEach(function(lesson){ %>
                     <option><%=lesson.title%><span><%=' _ID:' + lesson.id%></span></option>
                     <% }) %>
                </select>
        </div>
        
        
        <div class="form-group">
            <label>Номер Урока</label>
                <input class='form-control'  id='lesson_id'   type=text name="part[lesson_id]" >
        </div>
        <div class="form-group">
            <label>Ссылка на урок</label>
                <input class='form-control'  placeholder='введите имя фотографии на сервере. Например fitnes'  type=text name="lesson[url]" >
        </div>
        
        <div class="form-group">
            <label>Продолжительность Урока</label>
                <input class='form-control'  required   type=text  name="part[lenght]"> 
        </div>

        <div class="form-group">
            <label>Описание Урока</label>
                <textarea rows="4" cols="10" class='form-control'   name="part[description]"> </textarea>
        </div>
        
            <input type="submit" class="btn btn-lg btn-success">
    </form>
</div>

