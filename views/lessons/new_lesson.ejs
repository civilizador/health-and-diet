<center><h1> Добавить Новый Урок</h1>
</center>
<div class='container'>
  
    <form action="/create_lesson" method="POST">
  
        <div class="form-group">
            <label>Добавлен</label>
                <input   class='form-control' required type=date name="lesson[created]" >
        </div>
        
         <div  class="form-group">
            <label>Добавить урок в следующий курс</label>
                <select id='related_to_course' class='form-control' name="lesson[related_to_course_name]">
                     <% courses_list.forEach(function(course){ %>
                     <option><%=course.title%><span><%=' _ID:' + course.id%></span></option>
                     <% }) %>
                </select>
        </div>
        
        <div class="form-group">
            <label>ID Курса</label>
                <input class='form-control'  id='related_to_courseID'   type=text name="lesson[related_to_course_id]" >
        </div>
        
        <div class="form-group">
            <label>Название Урока</label>
                <input class='form-control'  id='title'   type=text name="lesson[title]" >
        </div>
        <div class="form-group">
            <label>Номер Урока</label>
                <input class='form-control'  id='number'   type=text name="lesson[number]" >
        </div>
        <div class="form-group">
            <label>Фото в описании урока.</label>
                <input class='form-control'  id='title' placeholder='введите имя фотографии на сервере. Например fitnes'  type=text name="lesson[image]" >
        </div>
        
        <div class="form-group">
            <label>Количество Частей в Уроке </label>
                <input class='form-control'  required   type=text  name="lesson[parts_count]"> 
        </div>
        
        <div class="form-group">
            <label>Продолжительность Урока</label>
                <input class='form-control'  required   type=text  name="lesson[lenght]"> 
        </div>
    
         
        <div class="form-group">
            <label>Описание Урока</label>
                <textarea rows="4" cols="10" class='form-control'   name="lesson[description]"> </textarea>
        </div>
        
            <input type="submit" class="btn btn-lg btn-success">
    </form>
</div>




 

 <script>
        $('#related_to_course').change(function(){
            var string = $('#related_to_course').val()
            var newString = string.split(":").pop();
             $('#related_to_courseID').val(newString)
         })
        </script>